<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="4dp" />

            <solid android:color="@color/timeline_entry_stroke" >
            </solid>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="4dp" />

            <gradient
                android:angle="90"
                android:endColor="#ffffff"
                android:startColor="#fafaf8" />

            <stroke
                android:width="1dp"
                android:color="@color/timeline_entry_stroke" />
        </shape>
    </item>

</layer-list>