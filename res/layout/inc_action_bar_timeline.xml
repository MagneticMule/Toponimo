<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@drawable/title_grad"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_text"
            style="@style/ButtonTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:paddingLeft="10dip"
            android:text="Timeline"
            android:textColor="#4f4f4f"
            android:textSize="22sp" >
        </TextView>

        <View
            android:id="@+id/place_holder"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="20dip"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="20dip"
            android:src="@drawable/arrow_circle_left_32" >
        </ImageView>

        <ProgressBar
            android:id="@+id/refresh_progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="20dip"
            android:visibility="invisible" />

        <View
            android:id="@+id/vertical_bar_1"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/place_holder"
            android:background="@drawable/shadow_grad" />

        <ImageView
            android:id="@+id/word_bank_button"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/vertical_bar_1"
            android:src="@drawable/tray_full_32" />
    </RelativeLayout>

</merge>