<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_grad"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/word_details_word_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="About This Place"
            android:textColor="#4f4f4f"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#dedede" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:background="@drawable/shadow_grad" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/place_details_place_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="The Spire Cafe"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place_details_place_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_details_place_name"
            android:layout_marginTop="1dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Jubilee Campus"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/place_details_place_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_details_place_address"
            android:layout_marginTop="4dip"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="0.1 miles away"
            android:textColor="@color/brown_green_light"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/divider_grad" />

    <LinearLayout
        android:id="@+id/place_details_words_buttons_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_details_words_label"
        android:gravity="center_horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/button1"
            style="@style/ButtonTextGrey"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:background="@drawable/grey_button_left"
            android:text="ALL" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonTextGrey"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:background="@drawable/grey_button_center"
            android:text="USER" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonTextGrey"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:background="@drawable/grey_button_right"
            android:text="DICTIONARY" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/divider_grad" />

    <ListView
        android:id="@+id/place_details_word_listview"
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:layout_weight="0.8"
        android:divider="@drawable/divider_grad"
        android:dividerHeight="2dip"
        android:fadingEdge="horizontal|none"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:scrollingCache="false" />

    <LinearLayout
        android:id="@+id/place_details_bottom_location_bar"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="0.1"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/places_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="9dip" >
        </TextView>
    </LinearLayout>

</LinearLayout>