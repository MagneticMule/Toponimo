<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="80dip"
	android:paddingTop="5dip" android:paddingBottom="5dip"
	android:paddingLeft="10dip" android:paddingRight="10dip"
	android:background="@drawable/grey_to_grey_grad" android:gravity="center">

	<TextView android:id="@+id/label" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:singleLine="true" android:textColor="@color/black"
		android:textSize="16sp" android:textStyle="bold" android:ellipsize="marquee" />

	<TextView android:id="@+id/label_address" android:layout_height="wrap_content"
		android:layout_below="@id/label" android:gravity="center_vertical"
		android:textColor="@color/darker_gray" android:textSize="12sp"
		android:ellipsize="marquee" android:singleLine="true"
		android:scrollHorizontally="true" android:text="@string/words"
		android:layout_marginTop="4dip" android:layout_width="wrap_content" />

	<TextView android:id="@+id/label_words" android:layout_height="wrap_content"
		android:layout_below="@id/label_address" android:gravity="center_vertical"
		android:textColor="@color/darker_gray" android:textSize="10sp"
		android:ellipsize="marquee" android:singleLine="true"
		android:scrollHorizontally="true" android:text="@string/words"
		android:layout_marginTop="4dip" android:layout_width="wrap_content" />

	<TextView android:id="@+id/forward" android:layout_width="20dip"
		android:textColor="@color/darker_gray" android:layout_marginLeft="5dip"
		android:textStyle="bold" android:layout_alignParentRight="true"
		android:text=">" android:layout_gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_centerVertical="true" />
	/>
</RelativeLayout>