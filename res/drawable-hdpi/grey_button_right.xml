<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#444444" />

            <stroke android:width="1dp" android:color="#222222" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="8dip" android:topLeftRadius="0dip" android:topRightRadius="8dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#f1f1f1" android:startColor="#e1e1e1" />

            <stroke android:width="1px" android:color="#9f9f9f" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="8dip" android:topLeftRadius="0dip" android:topRightRadius="8dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>