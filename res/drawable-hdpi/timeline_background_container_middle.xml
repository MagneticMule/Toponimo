<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#444444" />

            <stroke android:width="1dip" android:color="#222222" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <padding android:bottom="0dip" android:left="10dip" android:right="10dip" android:top="0dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#fefefe" />

            <stroke android:width="1px" android:color="#9f9f9f" />

            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <padding android:bottom="0dip" android:left="10dip" android:right="10dip" android:top="0dip" />
        </shape></item>

</selector>