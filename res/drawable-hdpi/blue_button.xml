<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid 
				android:color="#449def" />
			<stroke 
				android:width="1dp" android:color="#2f6699" />
			<corners 			
				android:radius="4dp" />
			<padding 
				android:left="10dp" 
				android:top="10dp"
				android:right="10dp" 
				android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient 
				android:startColor="#6F8FA8" 
				android:endColor="#5D758E"
				android:angle="270" />
			<stroke 
				android:width="1dp" 
				android:color="#30465E" />
			<corners 				
				android:radius="4dp" />
			<padding 
			android:left="10dp" 
				android:top="10dp"
				android:right="10dp" 
				android:bottom="10dp" />
		</shape>
	</item>
</selector>